          fx:controller="blackjack.controller.GameController">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <AnchorPane fx:id="anchorPane" prefHeight="667.0" prefWidth="375.0">
        <Label layoutX="170.5" layoutY="30" prefHeight="40" prefWidth="70" text="DEALER" textAlignment="CENTER"/>
