<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../css/menu.css" alignment="center" hgap="10"
          prefHeight="667.0" prefWidth="375.0"
          vgap="10" xmlns="http://javafx.com/javafx/8.0.131" fx:controller="blackjack.controller.MenuController">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <AnchorPane fx:id="anchorPane" prefHeight="200.0" prefWidth="200.0">
        <ImageView fx:id="title" fitWidth="256" layoutX="68" layoutY="100" preserveRatio="true">
            <Image url="file:img/title.png"/>
        </ImageView>
        <Pane prefHeight="667.0" prefWidth="375.0">
            <Button layoutX="68.0" layoutY="256.0" mnemonicParsing="false" onMouseClicked="#startGame"
                    prefHeight="48.0" prefWidth="256.0" text="NEW GAME"/>
            <Button layoutX="68.0" layoutY="352.0" mnemonicParsing="false" prefHeight="48.0"
                    prefWidth="256.0" text="SETTINGS"/>
            <Button layoutX="68.0" layoutY="448.0" mnemonicParsing="false" onMouseClicked="#enterAuthors"
                    prefHeight="48.0" prefWidth="256.0" text="AUTHORS"/>
            <Button layoutX="68.0" layoutY="544.0" mnemonicParsing="false" onMouseClicked="#exit"
                    prefHeight="48.0" prefWidth="256.0" text="QUIT"/>
        </Pane>
    </AnchorPane>
</GridPane>
